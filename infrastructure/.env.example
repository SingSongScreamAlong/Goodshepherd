# Good Shepherd Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database
# =============================================================================
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# Authentication
# =============================================================================
# REQUIRED: Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# API Security
# =============================================================================
ADMIN_API_KEY=your_admin_api_key_here
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
RATE_LIMIT_ENABLED=true

# Account Security
MAX_FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
MAX_SESSIONS_PER_USER=5

# =============================================================================
# Email (SMTP)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=alerts@yourdomain.com
SMTP_FROM_NAME=Good Shepherd Alerts

# =============================================================================
# SMS/WhatsApp (Twilio)
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# =============================================================================
# Data Sources
# =============================================================================
# Enable/disable sources
GDACS_ENABLED=true
RELIEFWEB_ENABLED=true
WHO_ENABLED=true
SOCIAL_ENABLED=true
ACLED_ENABLED=false

# ACLED API (https://acleddata.com/register/)
ACLED_API_KEY=your_acled_api_key
ACLED_EMAIL=your_email@example.com

# Poll intervals (seconds)
GDACS_POLL_INTERVAL=300
RELIEFWEB_POLL_INTERVAL=900
WHO_POLL_INTERVAL=3600
SOCIAL_POLL_INTERVAL=600
ACLED_POLL_INTERVAL=3600

# =============================================================================
# Alert Engine
# =============================================================================
ALERT_POLL_INTERVAL=60
ALERT_BATCH_SIZE=100
ALERT_DEDUP_HOURS=24
ALERT_ESCALATION_ENABLED=true
ALERT_ESCALATION_TIMEOUT=30

# =============================================================================
# Digest Service
# =============================================================================
DIGEST_DAILY_HOUR=8
DIGEST_WEEKLY_DAY=0

# =============================================================================
# Search (Meilisearch)
# =============================================================================
MEILI_MASTER_KEY=your_meili_master_key

# =============================================================================
# Object Storage (MinIO)
# =============================================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# =============================================================================
# Frontend
# =============================================================================
FRONTEND_URL=http://localhost:3000
