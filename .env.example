# Good Shepherd Environment Variables
# Copy this file to .env and customize for your environment

# =============================================================================
# Core Services
# =============================================================================
DATABASE_URL=postgresql+asyncpg://goodshepherd:goodshepherd@localhost:5432/goodshepherd
REDIS_URL=redis://localhost:6379/0
MEILI_MASTER_KEY=local_dev_key
MEILI_HTTP_ADDR=http://localhost:7700
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# =============================================================================
# API Configuration
# =============================================================================
SQLALCHEMY_ECHO=false
UVICORN_RELOAD=true
LOG_LEVEL=INFO
ADMIN_API_KEY=your_secure_admin_key_here

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET_KEY=your_super_secret_jwt_key_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
PASSWORD_RESET_EXPIRE_HOURS=24
EMAIL_VERIFICATION_EXPIRE_HOURS=48

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true

# =============================================================================
# Geocoding (Nominatim)
# =============================================================================
GEOCODE_BASE_URL=https://nominatim.openstreetmap.org
GEOCODE_USER_AGENT=GoodShepherd/0.2
GEOCODE_TIMEOUT=10
GEOCODE_RATE_LIMIT_SECONDS=1.0
GEOCODE_DISABLED=false

# =============================================================================
# Twilio (SMS/WhatsApp Alerts)
# =============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# =============================================================================
# SMTP (Email Digests & Auth Emails)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=alerts@goodshepherd.org
SMTP_FROM_NAME=Good Shepherd
SMTP_USE_TLS=true
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Intelligence Sources
# =============================================================================
# ACLED (Armed Conflict Location & Event Data)
ACLED_API_KEY=
ACLED_EMAIL=
ACLED_REGIONS=Europe,Middle East
ACLED_COUNTRIES=

# =============================================================================
# Frontend Configuration
# =============================================================================
REACT_APP_API_BASE=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# =============================================================================
# Production TLS/Proxy
# =============================================================================
# ACME_EMAIL=ops@example.org
# DOMAIN=goodshepherd.example.org
