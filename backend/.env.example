# Database Configuration
DATABASE_URL=postgresql://goodshepherd:goodshepherd@postgres:5432/goodshepherd
DATABASE_ECHO=false

# Redis Configuration (for Celery/workers)
REDIS_URL=redis://redis:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# LLM Configuration (OpenAI for initial implementation)
OPENAI_API_KEY=your-openai-api-key-here
LLM_MODEL=gpt-4-turbo-preview
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.3

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Worker Configuration
RSS_WORKER_INTERVAL_MINUTES=30
NEWS_WORKER_INTERVAL_MINUTES=60
GOV_WORKER_INTERVAL_MINUTES=120
SOCIAL_WORKER_INTERVAL_MINUTES=15

# Security
ALLOWED_HOSTS=localhost,127.0.0.1
RATE_LIMIT_PER_MINUTE=60
